<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_gravity="center_horizontal|top"
        tools:layout="@layout/abc_screen_simple"

        />

    <LinearLayout
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/markerInfo"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dim_foreground_material_light">

        <!--<TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:textAppearance="?android:attr/textAppearanceInverse"
            android:layout_height="fill_parent"
            android:id="@+id/nameView" />-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:measureWithLargestChild="false">

            <TextView
                android:paddingLeft="5dp"
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceInverse"
                android:gravity="center_vertical"
                android:background="?android:attr/activatedBackgroundIndicator"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:text="Саржин яр" />

            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Традиционный пошаговый"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textSize="12sp"
                    android:minHeight="10dip"
                    android:background="#ff1892ff"
                    android:id="@+id/geoCacheTypeView" />

                <!--<TextView-->
                <!--android:text="Действующий"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="?android:attr/textAppearanceSmallInverse"-->
                <!--android:gravity="center_vertical"-->
                <!--android:layout_marginEnd="10dip"-->
                <!--android:paddingLeft="5dip"-->
                <!--android:paddingRight="5dip"-->
                <!--android:textSize="12sp"-->
                <!--android:minHeight="10dip"-->
                <!--android:background="#ff1892ff" />-->

                <TextView
                    android:id="@+id/distanceLabel"
                    android:text="10 км"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textSize="12sp"
                    android:minHeight="10dip"
                    android:background="#ff1892ff" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:src="@android:drawable/ic_menu_save"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="fill_parent"
            android:id="@+id/saveBtn" />

        <ImageButton
            android:src="@android:drawable/ic_menu_delete"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="fill_parent"
            android:id="@+id/deleteBtn" />

        <ImageButton
            android:src="@android:drawable/ic_menu_directions"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="fill_parent"
            android:id="@+id/findBtn" />
    </LinearLayout>

</FrameLayout>