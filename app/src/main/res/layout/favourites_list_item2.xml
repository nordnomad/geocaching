<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="horizontal"
    android:paddingBottom="10sp">

    <ImageView
        android:id="@+id/markerView"
        android:src="@drawable/map_marker"
        android:scaleX="2"
        android:scaleY="2"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/info"
        android:layout_toEndOf="@+id/markerView"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:text="Левый берег"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/geoCacheTypeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dip"
                android:background="@drawable/rounded_corner"
                android:gravity="center_vertical"
                android:minHeight="10dip"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="5dip"
                android:text="Традиционный пошаговый"
                android:textAllCaps="true"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:textSize="10sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_toEndOf="@+id/info"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <geocaching.ui.compass.CompassView2
            android:id="@+id/compassView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/distanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="10dip"
            android:text="171,1 км"
            android:layout_gravity="end"
            android:textAllCaps="true"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>